{
  "name": "hermit-front",
  "version": "1.0.4",
  "scripts": {
    "dev": "node ssr/dev.mjs --mode staging",
    "dev:client": "vite --host --mode staging",
    "dev:test": "vite --host --mode staging",
    "build:client:test": "vite  build --mode staging  --ssrManifest  --outDir dist/client",
    "build:server:test": "vite build --mode staging --config vite.config.noexternal.ts --ssr src/entry-server.ts --outDir dist/server",
    "build:client:prod": "vite  build --mode production  --ssrManifest  --outDir dist/client",
    "build:server:prod": "vite build --mode production --config vite.config.noexternal.ts --ssr src/entry-server.ts --outDir dist/server",
    "copy:ssrdir": "rm -rf dist && mkdir dist && cp -r ssr/prod dist/ssr && cd dist/ssr && npm install",
    "build:test02": "run-p copy:ssrdir build:client:test build:server:test",
    "build:test": "npm run build:test02",
    "build:prod": "run-p copy:ssrdir build:client:prod build:server:prod",
    "lint:style": "stylelint src/**/*.{html,vue,css}",
    "lint:style-fix": "stylelint --fix src/**/*.{html,vue,css}",
    "lint:ts": "eslint ./src --ext .vue,.js,.ts,.jsx,.tsx",
    "lint:ts-fix": "eslint --fix ./src --ext .vue,.js,.ts,.jsx,.tsx ",
    "prettier:fix": "prettier --write .",
    "prepare": "husky install",
    "preview": "cd ssr && node preview.js"
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "pretty-quick --staged",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@css-render/vue3-ssr": "^0.15.10",
    "@popperjs/core": "^2.10.1",
    "@types/qs": "^6.9.7",
    "@vicons/ionicons5": "^0.11.0",
    "@vueuse/core": "^7.3.0",
    "axios": "^0.24.0",
    "dayjs": "^1.11.1",
    "echarts": "^5.3.3",
    "express": "^4.18.1",
    "js-base64": "^3.7.2",
    "naive-ui": "^2.31.0",
    "npm-run-all": "^4.1.5",
    "qs": "^6.10.2",
    "swiper": "^7.3.2",
    "vite-plugin-svg-transform-script": "^1.1.0",
    "vue": "^3.2.36",
    "vue-i18n": "9",
    "vue-router": "^4.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vitejs/plugin-vue-jsx": "^1.0.2",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "less": "^4.1.3",
    "prettier": "2.5.1",
    "pretty-quick": "v3.1.3 ",
    "sass": "^1.53.0",
    "typescript": "^4.1.3",
    "vite": "^2.9.9",
    "vite-plugin-style-import": "^0.10.0",
    "vite-plugin-windicss": "^1.6.3",
    "vue-tsc": "^0.0.24",
    "windicss": "^3.4.3"
  }
}
