{
  "name": "hermit-front",
  "version": "1.0.0",
  "scripts": {
    "serve:dev": "vite --host --mode development",
    "serve:stage": "vite --host --mode staging",
    "serve:pretest": "vite --host --mode pretest",
    "serve:prod": "vite --host --mode production",
    "build:dev": "vite build --mode development",
    "build:stage": "vite build --mode staging",
    "build:prod": "vite build --mode production",
    "build:pretest": "vite build --mode pretest",
    "lint:style": "stylelint src/**/*.{html,vue,css}",
    "lint:style-fix": "stylelint --fix src/**/*.{html,vue,css}",
    "lint:ts": "eslint ./src --ext .vue,.js,.ts,.jsx,.tsx && prettier --check .",
    "lint:ts-fix": "eslint --fix ./src --ext .vue,.js,.ts,.jsx,.tsx && prettier --write .",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "commit": "eslint --fix ./src --ext .vue,.js,.ts,.jsx,.tsx && prettier --write . && stylelint --fix src/**/*.{html,vue,css} && jest"
  },
  "dependencies": {
    "@popperjs/core": "^2.10.1",
    "@types/qs": "^6.9.7",
    "@vicons/fa": "^0.11.0",
    "@vicons/ionicons5": "^0.11.0",
    "@vueuse/core": "^7.3.0",
    "animate.css": "^4.1.1",
    "axios": "^0.24.0",
    "html2canvas": "^1.3.3",
    "js-base64": "^3.7.2",
    "naive-ui": "^2.22.0",
    "qs": "^6.10.2",
    "swiper": "^7.3.2",
    "vfonts": "^0.1.0",
    "vue": "^3.2.23",
    "vue-i18n": "9",
    "vue-router": "4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^27.0.2",
    "@types/marked": "^2.0.2",
    "@types/node": "^16.11.13",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vitejs/plugin-vue-jsx": "^1.0.2",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/compiler-sfc": "^3.0.5",
    "@vue/test-utils": "^2.0.0-rc.16",
    "babel-jest": "26.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "26.0.0",
    "prettier": "2.5.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^2.6.0",
    "stylelint-config-standard": "^22.0.0",
    "svg-sprite-loader": "^6.0.9",
    "ts-jest": "26.4.4",
    "typescript": "^4.1.3",
    "vite": "^2.2.3",
    "vite-plugin-style-import": "^0.10.0",
    "vite-plugin-windicss": "^1.6.3",
    "vue-jest": "^5.0.0-alpha.10",
    "vue-tsc": "^0.0.24",
    "windicss": "^3.4.3",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0"
  }
}
